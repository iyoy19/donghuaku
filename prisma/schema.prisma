// Prisma Schema for DonghuaKu
// Provider: PostgreSQL

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  // TV & Movie statuses
  upcoming
  ongoing
  complete
  canceled
  pilot

  // Movie specific
  released
  rumored
  planned
  in_production
  post_production

  unknown
}

model Donghua {
  id           Int       @id @default(autoincrement())
  tmdbId       Int       @unique
  title        String
  chineseTitle String?
  overview     String    @db.Text
  synopsis     String?   @db.Text
  posterPath   String?
  backdropPath String?
  posters      String[]
  releaseDate  DateTime?
  firstAirDate DateTime?
  voteAverage  Float     @default(0)
  voteCount    Int       @default(0)
  status       Status?
  episodeCount Int       @default(0)
  mediaType    String // "tv" | "movie"
  genreIds     Int[]
  keywords     Json?
  category     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  episodes Episode[]
  genres   Genre[]   @relation("DonghuaGenres")

  @@index([tmdbId])
  @@index([status])
  @@index([mediaType])
  @@index([voteAverage])
}

model Episode {
  id             String    @id
  donghuaId      Int       @map("donghua_id")
  episodeNumber  Int       @map("episode_number")
  title          String
  thumbnail      String?
  duration       Int?
  airDate        DateTime? @map("air_date") @db.Date
  servers        Json      @default("[]")
  subtitles      Json      @default("[]")

  tmdbEpisodeId  Int?      @unique @map("tmdb_episode_id")
  overview       String?   @db.Text
  stillPath      String?   @map("still_path")
  crew           Json?
  guestStars     Json?     @map("guest_stars")
  voteAverage    Float?    @map("vote_average")
  voteCount      Int?      @default(0) @map("vote_count")
  productionCode String?   @map("production_code")
  seasonNumber   Int?      @map("season_number")

  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  donghua Donghua @relation(fields: [donghuaId], references: [id], onDelete: Cascade)

  @@unique([donghuaId, episodeNumber])
  @@index([donghuaId])
  @@index([donghuaId, episodeNumber])
  @@index([tmdbEpisodeId])
  @@map("episodes")
}

model Genre {
  id       Int       @id
  name     String
  donghuas Donghua[] @relation("DonghuaGenres")

  @@map("genres")
}

model AdminUser {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  email     String?  @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("admin_users")
}
