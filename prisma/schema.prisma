generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  // TV Series statuses
  upcoming // Series not yet aired / Movie not yet released
  ongoing // Currently airing (returning series)
  complete // Series ended / All episodes released
  canceled // Series/Movie canceled
  pilot // Only pilot episode exists

  // Movie specific statuses
  released // Movie has been released
  rumored // Movie in rumor stage
  planned // Officially planned
  in_production // Currently in production
  post_production // Post-production phase

  // Fallback
  unknown // Status unknown
}

model Donghua {
  id           Int       @id @default(autoincrement())
  tmdbId       Int       @unique
  title        String
  chineseTitle String?
  overview     String    @db.Text
  synopsis     String?   @db.Text
  posterPath   String?
  backdropPath String?
  posters      String[]
  releaseDate  DateTime?
  firstAirDate DateTime?
  voteAverage  Float     @default(0)
  voteCount    Int       @default(0)
  status       Status? // Use the Status enum here
  episodeCount Int       @default(0)
  mediaType    String // "tv" or "movie"
  genreIds     Int[]
  keywords     Json?
  category     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  episodes Episode[]
  genres   Genre[]   @relation("DonghuaGenres")

  @@index([tmdbId])
  @@index([status])
  @@index([mediaType])
  @@index([voteAverage])
}

model Episode {
  id             String    @id
  donghuaId      Int       @map("donghua_id")
  episodeNumber  Int       @map("episode_number")
  title          String
  thumbnail      String?
  duration       Int? // in minutes
  airDate        DateTime? @map("air_date") @db.Date
  servers        Json      @default("[]") // Array of VideoServer
  subtitles      Json      @default("[]") // Array of Subtitle
  // TMDB Episode Metadata
  tmdbEpisodeId  Int?      @unique @map("tmdb_episode_id")
  overview       String?   @db.Text
  stillPath      String?   @map("still_path")
  crew           Json? // Array of crew members
  guestStars     Json?     @map("guest_stars") // Array of guest stars
  voteAverage    Float?    @map("vote_average")
  voteCount      Int?      @default(0) @map("vote_count")
  productionCode String?   @map("production_code")
  seasonNumber   Int?      @map("season_number")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  donghua Donghua @relation(fields: [donghuaId], references: [id], onDelete: Cascade)

  @@unique([donghuaId, episodeNumber])
  @@index([donghuaId])
  @@index([donghuaId, episodeNumber])
  @@index([tmdbEpisodeId])
  @@map("episodes")
}

model Genre {
  id       Int       @id
  name     String
  donghuas Donghua[] @relation("DonghuaGenres")

  @@map("genres")
}

model AdminUser {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String // hashed password
  email     String?  @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("admin_users")
}
